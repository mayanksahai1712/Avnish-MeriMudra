@model IEnumerable<MeriMudra.Models.CreditCard>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@Html.AntiForgeryToken()
<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Credit Cards</a>
        </li>
        <li class="breadcrumb-item active">List</li>
    </ol>
    <p>
        <div class="col-md-2">
            <a class="btn btn-primary btn-block" href="~/Admin/CreditCards/SaveCcBasic/0"> Create New</a>
        </div>
    </p>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> List
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered dataTable" data-export-title="test" id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Bank.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CardName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CardDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CardImageUrl)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Bank.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CardName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CardDescription)
                                </td>
                                <td>
                                    <img src="@item.CardImageUrl" id="CardImageUrl" name="CardImageUrl" class="pull-center img-responsive circle" height="60px" width="100px">
                                </td>
                                <td>
                                    @Html.ActionLink("View", "Details", new { id = item.CardId }) |
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.CardId })*@
                                    <a href="#" data-toggle="modal" data-target="#exampleDeleteBox" onclick="addActionInConfirmBox('CreditCards', 'Delete', @item.CardId);">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script>
        $(document).ready(function () {
            $(".nav-item").removeClass("active");
            $("#Credit-Cards").addClass("active");
        });
    </script>
}