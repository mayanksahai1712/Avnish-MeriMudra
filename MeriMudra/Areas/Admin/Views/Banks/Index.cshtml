@model IEnumerable<MeriMudra.Models.Bank>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Banks</a>
        </li>
        <li class="breadcrumb-item active">List</li>
    </ol>
    <p>
        <div class="col-md-2">
            @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary btn-block" })
        </div>
    </p>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> List
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered dataTable">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LogoUrl)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.BankLogoUpload)</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.BankId }) |
                                @*@Html.ActionLink("Details", "Details", new { id = item.BankId }) |*@
                                @*@Html.ActionLink("Delete", "Delete", new { id=item.BankId })*@
                                <a href="#" data-toggle="modal" data-target="#exampleDeleteBox" onclick="addActionInConfirmBox('Banks', 'Delete', @item.BankId);">Delete</a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
    
@section scripts {
    <script>
        $(document).ready(function () {
            $(".nav-item").removeClass("active");
            $("#banks").addClass("active");
        });
    </script>
}