@model IEnumerable<MeriMudra.Models.CityGroup>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">City Group</a>
        </li>
        <li class="breadcrumb-item active">List</li>
    </ol>
    <p>
        <div class="col-md-2">
            @Html.ActionLink("Create New", "Edit", new { }, new { @class = "btn btn-primary btn-block" })
        </div>
    </p>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> List
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered dataTable">
                    <tr>
                        <th> Group Name</th>
                        <th> Number of cities </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.GroupName)
                            </td>
                            <td>
                                @item.CityIds.Split(',').Count()
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.GroupId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.GroupId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.GroupId })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $(".nav-item").removeClass("active");
            $("#city-groups").addClass("active");
        });
    </script>
}